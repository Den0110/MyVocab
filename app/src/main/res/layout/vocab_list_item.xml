<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/horizontal_layout_margin"
    android:paddingTop="@dimen/vertical_layout_margin"
    android:paddingEnd="@dimen/horizontal_layout_margin"
    android:paddingBottom="@dimen/vertical_layout_margin">

    <ImageView
        android:id="@+id/knowing_level"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:src="@drawable/ic_brain_green_18dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/horizontal_layout_margin"
        android:layout_toEndOf="@+id/knowing_level">

        <TextView
            android:id="@+id/word_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            tools:text="@tools:sample/cities"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/translate_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            tools:text="@tools:sample/cities"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        android:src="@drawable/ic_delete_24dp"/>

</RelativeLayout>