<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="@dimen/horizontal_layout_margin"
    android:paddingTop="@dimen/vertical_layout_margin"
    android:paddingBottom="@dimen/vertical_layout_margin">

    <CheckBox
        android:id="@+id/need_to_learn_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/knowing_level"
        android:layout_toEndOf="@+id/need_to_learn_checkbox"
        android:orientation="vertical">

        <TextView
            android:id="@+id/word_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            tools:text="especially" />

        <TextView
            android:id="@+id/translate_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryTextColor"
            tools:text="особенно" />

    </LinearLayout>

    <ImageView
        android:id="@+id/knowing_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        tools:src="@drawable/ic_brain_green_18dp"
        tools:visibility="visible"/>

</RelativeLayout>