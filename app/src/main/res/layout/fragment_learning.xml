<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.myvocab.myvocab.ui.learning.LearningViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_layout" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/learningCardColor"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/word_scroll"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/bottom_views"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/word_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@+id/dont_know_container"
                        app:layout_constraintStart_toEndOf="@+id/dont_know_container">

                        <TextView
                            android:id="@+id/question"
                            style="@style/AppTheme.Label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/learning_screen_padding"
                            android:layout_marginTop="@dimen/learning_screen_padding"
                            android:layout_marginEnd="@dimen/learning_screen_padding"
                            android:text="@string/do_you_know"
                            android:textColor="@color/primaryTextColor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/word_set_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/learning_screen_padding"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="@dimen/learning_screen_padding"
                            android:text="@{viewModel.wordSetTitle}"
                            android:textColor="@color/secondaryTextColor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/question"
                            tools:text="Forward 10 WB Unit 5 Vocab" />

                        <ImageView
                            android:id="@+id/knowing_level"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="@dimen/learning_screen_padding"
                            android:baselineAlignBottom="true"
                            app:layout_constraintBaseline_toBaselineOf="@+id/word_title"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:src="@drawable/ic_brain_red_24dp" />

                        <TextView
                            android:id="@+id/word_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/horizontal_layout_margin"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="@dimen/learning_screen_padding"
                            android:background="@color/learningCardColor"
                            android:textAppearance="@style/LabelTextAppearance"
                            android:textColor="@color/colorAccent"
                            android:textSize="36sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/knowing_level"
                            app:layout_constraintTop_toBottomOf="@+id/word_set_title"
                            tools:text="Especially" />

                        <TextView
                            android:id="@+id/meanings"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/learning_screen_padding"
                            android:paddingStart="2dp"
                            android:textColor="@color/secondaryTextColor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/word_title"
                            app:layout_constraintTop_toBottomOf="@+id/word_title"
                            tools:text="purely, mainly" />

                        <View
                            android:id="@+id/divider"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="@dimen/learning_screen_padding"
                            android:background="@color/dividerColor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/word_title"
                            app:layout_constraintTop_toBottomOf="@+id/meanings" />

                        <LinearLayout
                            android:id="@+id/translation_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/learning_screen_padding"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/word_title"
                            app:layout_constraintTop_toBottomOf="@+id/divider">

                            <TextView
                                android:id="@+id/translation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="@dimen/horizontal_layout_margin"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="26sp"
                                tools:text="Особенно" />

                            <TextView
                                android:id="@+id/synonyms"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="2dp"
                                android:textColor="@color/secondaryTextColor"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/word_title"
                                app:layout_constraintTop_toBottomOf="@+id/word_title"
                                tools:text="в особенности, особо, тем более" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/examples_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="@dimen/learning_screen_padding"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/word_title"
                            app:layout_constraintTop_toBottomOf="@+id/translation_container">


                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/no_words_container"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/horizontal_layout_margin"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/no_words_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_words_to_learn"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_layout_margin"
                        android:gravity="center"
                        android:text="@string/select_words_you_want_to_learn_or_add_new_words"
                        android:textColor="@color/secondaryTextColor" />

                    <TextView
                        android:id="@+id/search_words_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_layout_margin"
                        android:padding="8dp"
                        android:text="@string/find_words"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choose_views"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:id="@+id/dont_know_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/learning_screen_padding"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/know_container"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/dont_know_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_close_48dp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/dont_know_label"
                                style="@style/AppTheme.Caption.LearningAskButtonCaption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="@string/i_dont_know" />

                        </LinearLayout>

                        <TextView
                            style="@style/AppTheme.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/progress_will_be_reset"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/know_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/learning_screen_padding"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/dont_know_container">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/know_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_done_48dp" />

                            <TextView
                                android:id="@+id/know_label"
                                style="@style/AppTheme.Caption.LearningAskButtonCaption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="@string/i_know" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/know_progress_label"
                            style="@style/AppTheme.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/progress_will_be_increased"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/next_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/learning_screen_padding"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/next_label"
                        style="@style/AppTheme.Caption.LearningAskButtonCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next_word" />

                    <ImageView
                        android:id="@+id/next_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_next_116dp" />

                </LinearLayout>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/bottom_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="top"
                    app:constraint_referenced_ids="next_container,choose_views" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>