<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/horizontal_layout_margin"
    android:layout_marginTop="@dimen/vertical_layout_margin"
    android:layout_marginEnd="@dimen/horizontal_layout_margin"
    android:layout_marginBottom="@dimen/vertical_layout_margin"
    android:orientation="vertical"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp"
    tools:cardBackgroundColor="#e8e8e8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            style="@style/AppTheme.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColor"
            tools:text="Top-10 words for Intermediate level"/>

        <TextView
            android:id="@+id/word_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:textSize="12sp"
            android:textColor="@color/secondaryTextColor"
            tools:text="34 words"/>

        <ImageView
            android:id="@+id/knowing_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_brain_yellow_18dp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/learning_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/knowing_level"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:textColor="@color/secondaryTextColor"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="50%"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>