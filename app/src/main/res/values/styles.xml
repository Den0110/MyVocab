<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.AppBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="AppTheme.Label" parent="AppTheme">
        <item name="android:textAppearance">@style/LabelTextAppearance</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Caption" parent="AppTheme">
        <item name="android:textAppearance">@style/CaptionTextAppearance</item>
        <item name="android:textColor">@color/captionTextColor</item>
    </style>

    <style name="AppTheme.Caption.LearningAskButtonCaption" parent="AppTheme.Caption">
        <item name="android:textAppearance">@style/LearningAskButtonCaptionTextAppearance</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">20sp</item>
    </style>

    <style name="LearningAskButtonCaptionTextAppearance">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="LabelTextAppearance">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CaptionTextAppearance">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textScaleX">0.0333333333</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
